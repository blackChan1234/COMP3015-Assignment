<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Connect to Server">
        <font>
            <Font name="Arial Bold" size="20.0" />
        </font>
    </Label>
    <TextField fx:id="ipField" promptText="Server IP Address" maxWidth="250">
        <font>
            <Font size="16.0"/>
        </font>
    </TextField>
    <TextField fx:id="portField" promptText="Server Port" maxWidth="250">
        <font>
            <Font size="16.0"/>
        </font>
    </TextField>
    <Button fx:id="connectButton" text="Connect" prefWidth="100">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>
</VBox>
